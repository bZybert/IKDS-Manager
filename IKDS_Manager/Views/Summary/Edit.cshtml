@model IKDDSModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Zmiana stanu postępowania</h2>

@using (Html.BeginForm("Save", "Summary", FormMethod.Post))
{
    <div class="form-inline">
        @Html.LabelFor(x => x.IKDDS, new { @class = "col-sm-2 control-label" })
        @Html.TextBoxFor(x => x.IKDDS, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.IKDDS)

    </div>
    <br />

    <div class="form-inline">

        @Html.LabelFor(x => x.OfficerName, new { @class = "col-sm-2 control-label" })
        @Html.TextBoxFor(x => x.OfficerName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.IKDDS)

    </div>
    <br />

    <div class="form-inline">
        @Html.LabelFor(x => x.RpsNumber, new { @class = "col-sm-2 control-label" })
        @Html.TextBoxFor(x => x.RpsNumber, new { @class = "form-control" })

    </div>
    <br />

    <div class="form-inline">

        @Html.LabelFor(x => x.RsdNumber, new { @class = "col-sm-2 control-label" })
        @Html.TextBoxFor(x => x.RsdNumber, new { @class = "form-control" })
    </div>
    <br />

    <div class="form-inline">
        @Html.LabelFor(x => x.ArticleNumber, new { @class = "col-sm-2 control-label" })
        @Html.TextBoxFor(x => x.ArticleNumber, new { @class = "form-control" })
    </div>
    <br />

    <div class="form-inline">
        @Html.LabelFor(x => x.EntryData, new { @class = "col-sm-2 control-label" })
        @Html.TextBoxFor(x => x.EntryData, "{0:d MM yyyy}", new { @class = "form-control date-p", @name = "date" })
        @Html.ValidationMessageFor(x => x.IKDDS)
    </div>
    <br />

    <div class="form-inline">

        @Html.LabelFor(x => x.FinalData, new { @class = "col-sm-2 control-label" })
        @Html.TextBoxFor(x => x.FinalData, "{0:d MM yyyy}", new { @class = "form-control date-p", @name = "date" })
    </div>
    <br />
    <div class="form-inline">
        @Html.LabelFor(x => x.FinalOfInvestigation, new { @class = "col-sm-2 control-label" })
        @Html.TextAreaFor(x => x.FinalOfInvestigation, new { @class = "form-control" })
    </div>
    <br />

    <div class="form-inline">
        @Html.LabelFor(x => x.RealEndDate, new { @class = "col-sm-2 control-label" })
        @Html.TextBoxFor(x => x.RealEndDate, "{0:d MM yyyy}", new { @class = "form-control date-p" })
    </div>
    <br />

    <div class="form-inline">
        @Html.LabelFor(x => x.OZDate, new { @class = "col-sm-2 control-label" })
        @Html.TextBoxFor(x => x.OZDate, "{0:d MM yyyy}", new { @class = "form-control date-p" })
    </div>
    <br />


    @Html.HiddenFor(m => m.Id)

    <button type="submit" class="btn btn-primary">Zapisz</button>
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script>
    $(document).ready(function () {
        var date_input = $('.date-p'); //our date input has the name "date"
        console.log(date_input);
        var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
        var options = {
            format: 'yy-mm-dd',
            container: container,
            todayHighlight: true,
            autoclose: true,
        };
        date_input.datepicker(options);
    })
</script>