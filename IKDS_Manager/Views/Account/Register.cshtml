@model IKDDS_Manager.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Rejestracja</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-group new-form" }))
{
    
    @Html.ValidationSummary(true, "Pola zaznaczone na czerwono są wymagane")


    @Html.LabelFor(x => x.Account.Login)
    @Html.TextBoxFor(x => x.Account.Login, new { @class = "form-control" })


    @Html.LabelFor(x => x.Account.Email)
    @Html.TextBoxFor(x => x.Account.Email, new { @class = "form-control" })

    @Html.LabelFor(x => x.Account.Password)
    @Html.TextBoxFor(x => x.Account.Password, new { @class = "form-control" })

        
    @Html.LabelFor(x => x.Account.RepeatPassword)
    @Html.TextBoxFor(x => x.Account.RepeatPassword, new { @class = "form-control" })

    @Html.HiddenFor(m => m.Account.Id)

    <button type="submit" class="btn btn-primary">Zarejestruj</button>
}
