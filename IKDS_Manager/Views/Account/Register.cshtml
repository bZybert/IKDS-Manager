@model IKDDS_Manager.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Rejestracja</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-group new-form" }))
{




    @Html.LabelFor(x => x.Login)
    @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })


    @Html.LabelFor(x => x.Email)
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "Email" })


    @Html.LabelFor(x => x.Password)
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "Password" })



    @Html.LabelFor(x => x.RepeatPassword)
    @Html.TextBoxFor(x => x.RepeatPassword, new { @class = "form-control", @type = "Password" })

    @Html.ValidationSummary()
    <br />
    <button type="submit" class="btn btn-primary">Zarejestruj</button>
}
